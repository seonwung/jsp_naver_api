package com.project.naver;

import java.io.*;
import java.net.*;
import java.util.HashMap;
import java.util.Map;

public class NaverSearchAPI {

    private static final String CLIENT_ID = "YOUR_CLIENT_ID";
    private static final String CLIENT_SECRET = "YOUR_CLIENT_SECRET";

    // ğŸ”¹ ì§€ì‹ì¸ ê²€ìƒ‰ ë©”ì„œë“œ: ê²€ìƒ‰ì–´ + ìµœëŒ€ 100ê±´
    public static String searchKin(String query, int display) {
        try {
            String text = URLEncoder.encode(query, "UTF-8");
            String apiURL = "https://openapi.naver.com/v1/search/kin?query=" + text
                          + "&display=" + display;   // â† ìµœëŒ€ 100ê¹Œì§€ ê°€ëŠ¥

            Map<String, String> headers = new HashMap<>();
            headers.put("X-Naver-Client-Id", CLIENT_ID);
            headers.put("X-Naver-Client-Secret", CLIENT_SECRET);

            return get(apiURL, headers);

        } catch (Exception e) {
            throw new RuntimeException("ì§€ì‹ì¸ ê²€ìƒ‰ ì‹¤íŒ¨", e);
        }
    }

    private static String get(String apiUrl, Map<String, String> requestHeaders) {
        HttpURLConnection con = connect(apiUrl);
        try {
            con.setRequestMethod("GET");
            for (Map.Entry<String, String> header : requestHeaders.entrySet()) {
                con.setRequestProperty(header.getKey(), header.getValue());
            }

            int responseCode = con.getResponseCode();
            InputStream body = (responseCode == HttpURLConnection.HTTP_OK)
                    ? con.getInputStream()
                    : con.getErrorStream();

            return readBody(body);
        } catch (IOException e) {
            throw new RuntimeException("API ìš”ì²­/ì‘ë‹µ ì¤‘ ì˜¤ë¥˜", e);
        } finally {
            con.disconnect();
        }
    }

    private static HttpURLConnection connect(String apiUrl) {
        try {
            URL url = new URL(apiUrl);
            return (HttpURLConnection) url.openConnection();
        } catch (Exception e) {
            throw new RuntimeException("ì—°ê²° ì‹¤íŒ¨: " + apiUrl, e);
        }
    }

    private static String readBody(InputStream body) {
        try (BufferedReader br = new BufferedReader(new InputStreamReader(body))) {
            StringBuilder sb = new StringBuilder();
            String line;

            while ((line = br.readLine()) != null) {
                sb.append(line);
            }

            return sb.toString();
        } catch (IOException e) {
            throw new RuntimeException("ì‘ë‹µ ì½ê¸° ì‹¤íŒ¨", e);
        }
    }
}